<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://www.ehcache.org/v3"
         xmlns:jsr107="http://www.ehcache.org/v3/jsr107"
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">
  <!--
    This is a default configuration, it is re-configured by the CacheConfiguration Spring Bean, using the
    properties from the resources/config/*.yml files.
  -->
  <persistence directory="${MICA_HOME}/work/ehcache"/>

  <cache alias="org.apache.shiro.realm.text.PropertiesRealm-0-accounts">
    <key-type serializer="org.ehcache.impl.serialization.CompactJavaSerializer">
      java.lang.Object
    </key-type>
    <value-type serializer="org.ehcache.impl.serialization.CompactJavaSerializer">
      java.lang.Object
    </value-type>

    <resources>
      <heap unit="entries">1000</heap>
      <disk unit="GB">1</disk>
    </resources>
  </cache>

  <cache-template name="defaultCacheConfiguration">
    <expiry>
      <tti unit="seconds">120</tti>
    </expiry>
    <heap unit="entries">10000</heap>
  </cache-template>

  <cache alias="micaConfig">
    <key-type serializer="org.ehcache.impl.serialization.CompactJavaSerializer">
      java.lang.Object
    </key-type>
    <value-type serializer="org.ehcache.impl.serialization.CompactJavaSerializer">
      java.lang.Object
    </value-type>

    <resources>
      <heap unit="entries">100</heap>
      <disk persistent="false"/>
    </resources>
    <expiry>
      <none/>
    </expiry>

<!--      maxBytesLocalHeap="1M"-->
<!--      overflowToDisk="false"-->
<!--      eternal="true"-->
<!--      timeToLiveSeconds="0"-->
<!--      timeToIdleSeconds="0"-->
  </cache>

  <cache alias="studies-draft">
    <key-type serializer="org.ehcache.impl.serialization.CompactJavaSerializer">
      java.lang.Object
    </key-type>
    <value-type serializer="org.ehcache.impl.serialization.CompactJavaSerializer">
      java.lang.Object
    </value-type>

    <resources>
      <heap unit="entries">100</heap>
      <disk unit="MB">1</disk>
    </resources>

    <expiry>
      <none/>
    </expiry>
<!--      overflowToDisk="true"-->
<!--      eternal="true"-->
<!--      timeToLiveSeconds="0"-->
<!--      timeToIdleSeconds="0"-->
  </cache>

  <cache alias="studies-published">
    <key-type serializer="org.ehcache.impl.serialization.CompactJavaSerializer">
      java.lang.Object
    </key-type>
    <value-type serializer="org.ehcache.impl.serialization.CompactJavaSerializer">
      java.lang.Object
    </value-type>

    <resources>
      <heap unit="entries">100</heap>
      <disk unit="MB">1</disk>
    </resources>
    <expiry>
      <none/>
    </expiry>
<!--      overflowToDisk="true"-->
<!--      eternal="true"-->
<!--      timeToLiveSeconds="0"-->
<!--      timeToIdleSeconds="0"-->
  </cache>

  <cache alias="variable-taxonomies">
    <key-type serializer="org.ehcache.impl.serialization.CompactJavaSerializer">
      java.lang.Object
    </key-type>
    <value-type serializer="org.ehcache.impl.serialization.CompactJavaSerializer">
      java.lang.Object
    </value-type>

    <resources>
      <heap unit="entries">10000</heap>
      <disk unit="MB">1</disk>
    </resources>
    <expiry>
      <none/>
    </expiry>
<!--         maxBytesLocalHeap="1M"-->
<!--         diskPersistent="true"-->
<!--         overflowToDisk="true"-->
<!--         eternal="true"-->
<!--    <sizeOfPolicy maxDepth="100000"/>--> <!-- Maybe use <eviction-advisor></eviction-advisor> -->
  </cache>

  <cache alias="aggregations-metadata">
    <key-type serializer="org.ehcache.impl.serialization.CompactJavaSerializer">
      java.lang.Object
    </key-type>
    <value-type serializer="org.ehcache.impl.serialization.CompactJavaSerializer">
      java.lang.Object
    </value-type>

    <resources>
      <heap unit="entries">100</heap>
      <disk unit="MB">1</disk>
    </resources>
    <expiry>
      <none/>
    </expiry>
<!--    overflowToDisk="true"-->
<!--    eternal="true">-->
  </cache>

  <cache alias="dataset-variables">
    <key-type serializer="org.ehcache.impl.serialization.CompactJavaSerializer">
      java.lang.Object
    </key-type>
    <value-type serializer="org.ehcache.impl.serialization.CompactJavaSerializer">
      java.lang.Object
    </value-type>

    <resources>
      <heap unit="entries">100</heap>
      <disk unit="MB">1</disk>
    </resources>
    <expiry>
      <none/>
    </expiry>

<!--    eternal="true"-->
<!--    overflowToDisk="true"-->
<!--    diskPersistent="true">-->
  </cache>

</config>

