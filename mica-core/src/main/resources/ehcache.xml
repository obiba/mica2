<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
    name="CM1"
    updateCheck="false"
    maxBytesLocalHeap="128M">

  <!--
    This is a default configuration, it is re-configured by the CacheConfiguration Spring Bean, using the
    properties from the resources/config/*.yml files.
  -->

  <diskStore path="${MICA_SERVER_HOME}/work/ehcache"/>

  <defaultCache eternal="false" overflowToDisk="false"/>

  <!-- We want eternal="true" and no timeToIdle or timeToLive settings because Shiro manages session
         expirations explicitly.  If we set it to false and then set corresponding timeToIdle and timeToLive properties,
         ehcache would evict sessions without Shiro's knowledge, which would cause many problems
        (e.g. "My Shiro session timeout is 30 minutes - why isn't a session available after 2 minutes?"
               Answer - ehcache expired it due to the timeToIdle property set to 120 seconds.)

        diskPersistent=true since we want an enterprise session management feature - ability to use sessions after
        even after a JVM restart.  -->
  <cache name="shiro-activeSessionCache"
      maxBytesLocalHeap="16M"
      overflowToDisk="true"
      eternal="true"
      timeToLiveSeconds="0"
      timeToIdleSeconds="0"
      diskPersistent="true"
      diskExpiryThreadIntervalSeconds="600"/>

  <cache name="org.apache.shiro.realm.text.PropertiesRealm-0-accounts"
      maxBytesLocalHeap="16M"
      eternal="true"
      overflowToDisk="true"/>

  <cache name="micaConfig"
      maxBytesLocalHeap="1M"
      overflowToDisk="false"
      eternal="true"
      timeToLiveSeconds="0"
      timeToIdleSeconds="0"/>

  <cache name="studies-draft"
      overflowToDisk="true"
      eternal="true"
      timeToLiveSeconds="0"
      timeToIdleSeconds="0"/>

  <cache name="studies-published"
      overflowToDisk="true"
      eternal="true"
      timeToLiveSeconds="0"
      timeToIdleSeconds="0"/>

</ehcache>

