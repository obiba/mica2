[
  {
    "type": "section",
    "htmlClass": "row",
    "items": [
      {
        "type": "section",
        "htmlClass": "col-xs-6",
        "items": [
          {
            "key": "_id",
            "validationMessage": {
              "uniqueId": "t(global.messages.error.unique-id)"
            }
          }
        ]
      },
      {
        "type": "section",
        "htmlClass": "col-xs-6",
        "items": [
          {
            "key": "_name",
            "type": "localizedstring"
          }
        ]
      }
    ]
  },
  {
    "type": "section",
    "htmlClass": "row",
    "items": [
      {
        "type": "section",
        "htmlClass": "col-xs-12",
        "items": [
          {
            "key": "_description",
            "type": "obibaSimpleMde",
            "rows": 3,
            "marked": true
          }
        ]
      }
    ]
  },
  {
    "type": "section",
    "htmlClass": "row",
    "items": [
      {
        "type": "section",
        "htmlClass": "col-xs-4",
        "items": [
          {
            "key": "_startYear",
            "type": "number"
          },
          {
            "key": "_endYear",
            "type": "number"
          }
        ]
      },
      {
        "type": "section",
        "htmlClass": "col-xs-4",
        "items": [
          {
            "key": "_startMonth",
            "type": "number"
          },
          {
            "key": "_endMonth",
            "type": "number"
          }
        ]
      },
      {
        "type": "section",
        "htmlClass": "col-xs-4",
        "items": [
          {
            "key": "_startDay",
            "dateOptions": {
              "dateFormat": "yyyy-MM-dd",
              "yearRef": "_startYear",
              "monthRef": "_startMonth",
              "validationMessage": {
                "invalidYMDate": "t(global.messages.error.invalid-ym-date)"
              }
            }
          },
          {
            "key": "_endDay",
            "dateOptions": {
              "dateFormat": "yyyy-MM-dd",
              "yearRef": "_endYear",
              "monthRef": "_endMonth",
              "lastDay": true,
              "validationMessage": {
                "invalidYMDate": "t(global.messages.error.invalid-ym-date)"
              }
            }
          }
        ]
      }
    ]
  }
]
