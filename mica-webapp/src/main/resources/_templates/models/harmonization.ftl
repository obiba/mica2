<#macro harmonizationLegend>
  <dl id="harmonization-legend" class="row">
    <dt class="col-sm-1"><i class="fa-solid fa-check text-success"></i></dt>
    <dd class="col-sm-11"><small><@message "harmonization-complete"/></small></dd>
    <dt class="col-sm-1"><i class="fa-solid fa-adjust text-muted"></i></dt>
    <dd class="col-sm-11"><small><@message "harmonization-partial"/></small></dd>
    <dt class="col-sm-1"><i class="fa-solid fa-times text-danger"></i></dt>
    <dd class="col-sm-11"><small><@message "harmonization-impossible"/></small></dd>
    <dt class="col-sm-1"><i class="fa-solid fa-question text-warning"></i></dt>
    <dd class="col-sm-11"><small><@message "harmonization-undetermined"/></small></dd>
    <dt class="col-sm-1"><i class="fa-solid fa-ban text-black"></i></dt>
    <dd class="col-sm-11"><small><@message "harmonization-na"/></small></dd>
  </dl>
</#macro>
